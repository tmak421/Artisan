# ==============================================================================
# ARTISAN APPAREL BACKEND - ENVIRONMENT CONFIGURATION
# ==============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
# ==============================================================================

# ------------------------------------------------------------------------------
# Server Configuration
# ------------------------------------------------------------------------------
NODE_ENV=development
PORT=3000
API_VERSION=v1

# ------------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# ------------------------------------------------------------------------------
DB_HOST=localhost
DB_PORT=5432
DB_NAME=artisan_apparel
DB_USER=artisan_user
DB_PASSWORD=your_secure_password_here
DB_SSL=false

# ------------------------------------------------------------------------------
# Security
# ------------------------------------------------------------------------------
# Generate with: openssl rand -hex 32
JWT_SECRET=your_jwt_secret_here_min_32_characters
WEBHOOK_SECRET=your_webhook_secret_here_min_32_characters
ADMIN_API_KEY=your_admin_api_key_here

# ------------------------------------------------------------------------------
# Decred Wallet RPC
# ------------------------------------------------------------------------------
DCR_RPC_URL=http://127.0.0.1:9109
DCR_RPC_USER=your_rpc_username
DCR_RPC_PASSWORD=your_rpc_password
DCR_TESTNET=false
DCR_MIN_CONFIRMATIONS=2

# ------------------------------------------------------------------------------
# Bitcoin Integration (Choose BTCPay OR Coinbase Commerce)
# ------------------------------------------------------------------------------
# BTCPay Server (self-hosted)
BTCPAY_URL=https://your-btcpay-server.com
BTCPAY_API_KEY=your_btcpay_api_key
BTCPAY_STORE_ID=your_store_id

# Coinbase Commerce (alternative - easier setup)
COINBASE_COMMERCE_API_KEY=your_coinbase_commerce_api_key
COINBASE_COMMERCE_WEBHOOK_SECRET=your_webhook_secret

# ------------------------------------------------------------------------------
# Monero Wallet RPC (optional)
# ------------------------------------------------------------------------------
XMR_RPC_URL=http://127.0.0.1:18082
XMR_RPC_USER=your_xmr_rpc_user
XMR_RPC_PASSWORD=your_xmr_rpc_password
XMR_MIN_CONFIRMATIONS=10

# ------------------------------------------------------------------------------
# Exchange API (Kraken)
# ------------------------------------------------------------------------------
KRAKEN_API_KEY=your_kraken_api_key
KRAKEN_API_SECRET=your_kraken_api_secret
KRAKEN_WITHDRAWAL_KEY=bank_account_name

# ------------------------------------------------------------------------------
# Printful Integration
# ------------------------------------------------------------------------------
PRINTFUL_API_KEY=your_printful_api_key
PRINTFUL_WEBHOOK_SECRET=your_printful_webhook_secret

# ------------------------------------------------------------------------------
# Shopify Integration
# ------------------------------------------------------------------------------
SHOPIFY_SHOP_NAME=your-shop-name
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_ACCESS_TOKEN=your_access_token

# ------------------------------------------------------------------------------
# Email Service (SendGrid)
# ------------------------------------------------------------------------------
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=orders@artisanapparel.com
EMAIL_FROM_NAME=Artisan Apparel

# ------------------------------------------------------------------------------
# Frontend URLs
# ------------------------------------------------------------------------------
FRONTEND_URL=https://artisanapparel.com
ORDER_SUCCESS_URL=https://artisanapparel.com/order/success
ORDER_CANCEL_URL=https://artisanapparel.com/order/cancel
ORDER_TRACK_URL=https://artisanapparel.com/track

# ------------------------------------------------------------------------------
# Rate Limiting
# ------------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ------------------------------------------------------------------------------
# Logging
# ------------------------------------------------------------------------------
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# ------------------------------------------------------------------------------
# Payment Settings
# ------------------------------------------------------------------------------
PAYMENT_EXPIRY_MINUTES=60
CRYPTO_RATE_CACHE_SECONDS=300
AUTO_CONVERT_THRESHOLD_USD=100
